---
import BaseLayout from '../layouts/BaseLayout.astro';
export const prerender = true;
const pageTitle = 'Pre-Baked Pies & Desserts | SatisPie';
const pageDescription =
  'Quality pre-baked pies, waffles & pancakes for retail & foodservice. Apple, pumpkin, cherry pies. Private label solutions available.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Hero Section -->
    <section class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-sp-purple mb-6">Quality Pre-Baked Pies & Desserts</h1>
      <p class="text-xl text-sp-text-secondary mb-8">
        Premium frozen pies, waffles, and pancakes for retail and foodservice
      </p>
    </section>

    <!-- Main Content -->
    <section class="prose prose-lg max-w-none">
      <div class="grid md:grid-cols-2 gap-8 mb-12">
        <div>
          <h2 class="text-2xl font-semibold text-sp-text-primary mb-4">New State-of-the-Art Facility</h2>
          <p class="text-sp-text-secondary mb-4">
            We are excited to announce our new state-of-the-art facility in Rochester, NY. Our expanded production
            capacity allows us to serve more customers while maintaining the same high quality standards that SatisPie
            is known for.
          </p>
        </div>

        <div>
          <h2 class="text-2xl font-semibold text-sp-text-primary mb-4">Private Label Solutions</h2>
          <p class="text-sp-text-secondary mb-4">
            In addition to our own branded products, we offer comprehensive private label solutions. Our products are
            custom formulated to your specifications - it's your product, in your packaging, made under SQF, HACCP & GMP
            controls.
          </p>
        </div>
      </div>

      <div class="bg-sp-bg-light p-6 rounded-lg mb-8">
        <h2 class="text-2xl font-semibold text-sp-text-primary mb-4">Available Products</h2>
        <p class="text-sp-text-secondary mb-4">We offer a wide variety of pre-baked desserts including:</p>
        <ul class="list-disc list-inside text-sp-text-secondary space-y-2">
          <li>Fruit pies (Apple, Blueberry, Cherry, Peach)</li>
          <li>Seasonal pies (Pumpkin, Sweet Potato)</li>
          <li>Specialty pies (Pecan, Apple Crumb, Triple Berry)</li>
          <li>Pre-baked pie shells</li>
          <li>Waffles and pancakes</li>
        </ul>
      </div>

      <div class="text-center">
        <h2 class="text-2xl font-semibold text-sp-text-primary mb-4">Fall Pie Season</h2>
        <p class="text-sp-text-secondary mb-6">
          As we approach the fall season, our pie production is in full swing. Contact us today to discuss your pie
          needs for the upcoming holiday season.
        </p>
        <a
          href="/contact"
          class="inline-block bg-sp-purple text-white px-6 py-3 rounded-lg font-semibold hover:bg-sp-purple-dark transition-colors"
        >
          Contact Us Today
        </a>
      </div>
    </section>
  </div>
</BaseLayout>
