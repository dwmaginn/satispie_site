---
import Layout from '~/layouts/Layout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Stats from '~/components/widgets/Stats.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { Icon } from 'astro-icon/components';

export const prerender = true;

const metadata = {
  title: 'SatisPie Manufacturing - Premium Industrial Pie Production | B2B Solutions',
  description: 'Leading industrial pie manufacturer providing private label, foodservice, and retail solutions. SQF certified facility with national distribution capabilities.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Section - B2B Industrial Focus -->
  <section class="relative bg-gradient-to-br from-gray-50 to-blue-50 py-20 md:py-28 overflow-hidden">
    <div class="absolute inset-0 bg-grid-gray-100 [mask-image:linear-gradient(0deg,white,rgba(255,255,255,0.6))] -z-10"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="mb-4">
            <span class="inline-block px-4 py-1 bg-blue-100 text-blue-700 text-sm font-semibold rounded-full uppercase tracking-wider">
              Industrial Pie Manufacturing
            </span>
          </div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
            Premium Pie Manufacturing at <span class="text-blue-600">Scale</span>
          </h1>
          <p class="text-xl text-gray-600 mb-8 leading-relaxed">
            Partner with SatisPie Manufacturing for high-volume pie production. Our SQF-certified facility produces millions of pies annually for leading retailers and foodservice operators across North America.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a
              href="/contact"
              class="inline-flex items-center justify-center px-8 py-4 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition-all duration-200 shadow-lg hover:shadow-xl"
            >
              Partner With Us
              <Icon name="tabler:arrow-right" class="w-5 h-5 ml-2" />
            </a>
            <a
              href="/capabilities/manufacturing"
              class="inline-flex items-center justify-center px-8 py-4 border-2 border-gray-300 text-gray-700 rounded-lg font-semibold hover:border-blue-600 hover:text-blue-600 transition-all duration-200"
            >
              View Capabilities
              <Icon name="tabler:building-factory" class="w-5 h-5 ml-2" />
            </a>
          </div>
        </div>
        <div class="relative">
          <div class="aspect-[4/3] bg-white rounded-2xl shadow-2xl overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1606938704652-3e588c2c9fd4?w=800"
              alt="Industrial pie manufacturing facility"
              class="w-full h-full object-cover"
            />
          </div>
          <div class="absolute -bottom-6 -left-6 bg-white p-6 rounded-xl shadow-xl max-w-xs">
            <div class="flex items-center space-x-4">
              <div class="bg-green-100 p-3 rounded-lg">
                <Icon name="tabler:certificate" class="w-8 h-8 text-green-600" />
              </div>
              <div>
                <div class="text-2xl font-bold text-gray-900">SQF Certified</div>
                <div class="text-sm text-gray-600">Highest Quality Standards</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section - B2B Metrics -->
  <Stats
    stats={[
      { amount: '10M+', icon: 'tabler:package', title: 'Pies Produced Annually' },
      { amount: '500+', icon: 'tabler:building-store', title: 'Retail Partners' },
      { amount: '50K', icon: 'tabler:building-factory-2', title: 'Sq. Ft. Facility' },
      { amount: '99.9%', icon: 'tabler:chart-line', title: 'On-Time Delivery' },
    ]}
  />

  <!-- Manufacturing Capabilities Section -->
  <Features2
    title="World-Class Manufacturing Capabilities"
    subtitle="State-of-the-art facilities and processes designed for efficiency, quality, and scale"
    columns={3}
    items={[
      {
        title: 'High-Volume Production',
        description: 'Advanced production lines capable of producing over 50,000 pies daily with consistent quality and efficiency.',
        icon: 'tabler:building-factory-2',
      },
      {
        title: 'Quality Certifications',
        description: 'SQF, HACCP, and GMP certified facility ensuring the highest food safety and quality standards for all products.',
        icon: 'tabler:certificate-2',
      },
      {
        title: 'Custom Formulation',
        description: 'In-house R&D team develops custom recipes and formulations to meet specific customer requirements and market demands.',
        icon: 'tabler:flask',
      },
      {
        title: 'Flexible Packaging',
        description: 'Multiple packaging options from bulk foodservice to retail-ready consumer packaging with private label capabilities.',
        icon: 'tabler:package',
      },
      {
        title: 'Supply Chain Excellence',
        description: 'Strategic partnerships with premium ingredient suppliers and nationwide cold chain distribution network.',
        icon: 'tabler:truck',
      },
      {
        title: 'Sustainability Focus',
        description: 'Committed to sustainable manufacturing practices including waste reduction, energy efficiency, and responsible sourcing.',
        icon: 'tabler:plant-2',
      },
    ]}
  />

  <!-- Product Categories Section -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <p class="text-base text-blue-600 font-bold tracking-wide uppercase">Our Products</p>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Premium Pie Portfolio</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Comprehensive product lines designed to meet diverse market needs and consumer preferences
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow">
          <div class="bg-blue-100 rounded-lg w-16 h-16 flex items-center justify-center mb-6">
            <Icon name="tabler:leaf" class="w-8 h-8 text-blue-600" />
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">Fruit Pies</h3>
          <p class="text-gray-600 mb-4">
            Classic fruit varieties including apple, cherry, blueberry, and peach. Available in multiple sizes and packaging configurations.
          </p>
          <a href="/products/fruit-pies" class="text-blue-600 font-medium hover:text-blue-700 flex items-center">
            View Products <Icon name="tabler:arrow-right" class="w-4 h-4 ml-1" />
          </a>
        </div>
        
        <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow">
          <div class="bg-orange-100 rounded-lg w-16 h-16 flex items-center justify-center mb-6">
            <Icon name="tabler:calendar" class="w-8 h-8 text-orange-600" />
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">Seasonal Specialties</h3>
          <p class="text-gray-600 mb-4">
            Holiday favorites including pumpkin, sweet potato, and pecan. Capitalize on seasonal demand with proven bestsellers.
          </p>
          <a href="/products/seasonal" class="text-blue-600 font-medium hover:text-blue-700 flex items-center">
            View Products <Icon name="tabler:arrow-right" class="w-4 h-4 ml-1" />
          </a>
        </div>
        
        <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow">
          <div class="bg-purple-100 rounded-lg w-16 h-16 flex items-center justify-center mb-6">
            <Icon name="tabler:stars" class="w-8 h-8 text-purple-600" />
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">Private Label</h3>
          <p class="text-gray-600 mb-4">
            Custom formulations and packaging for your brand. Complete white-label solutions with flexible minimum order quantities.
          </p>
          <a href="/solutions/private-label" class="text-blue-600 font-medium hover:text-blue-700 flex items-center">
            Learn More <Icon name="tabler:arrow-right" class="w-4 h-4 ml-1" />
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Partnership & Solutions Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <p class="text-base text-blue-600 font-bold tracking-wide uppercase">Trusted Partnerships</p>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Solutions for Every Business Model</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          From major retailers to regional chains, we deliver customized solutions that drive growth
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-12 mb-16">
        <div class="bg-gradient-to-br from-blue-50 to-white p-8 rounded-xl border border-blue-100">
          <div class="mb-6">
            <Icon name="tabler:building-store" class="w-12 h-12 text-blue-600 mb-4" />
            <h3 class="text-2xl font-bold text-gray-900 mb-2">Retail Partners</h3>
          </div>
          <p class="text-gray-600 mb-6">
            "SatisPie has been our trusted pie supplier for over 5 years. Their consistent quality, reliable delivery, and ability to scale during peak seasons make them an invaluable partner. Our pie sales have increased 40% since partnering with them."
          </p>
          <div class="border-t pt-4">
            <p class="font-semibold text-gray-900">Regional Grocery Chain</p>
            <p class="text-sm text-gray-600">500+ Store Locations</p>
          </div>
        </div>
        
        <div class="bg-gradient-to-br from-orange-50 to-white p-8 rounded-xl border border-orange-100">
          <div class="mb-6">
            <Icon name="tabler:tools-kitchen-2" class="w-12 h-12 text-orange-600 mb-4" />
            <h3 class="text-2xl font-bold text-gray-900 mb-2">Foodservice Excellence</h3>
          </div>
          <p class="text-gray-600 mb-6">
            "The consistency and quality of SatisPie's products allow us to maintain our high standards across all locations. Their bulk packaging options and competitive pricing have helped us improve our dessert margins by 25%."
          </p>
          <div class="border-t pt-4">
            <p class="font-semibold text-gray-900">National Restaurant Chain</p>
            <p class="text-sm text-gray-600">1,200+ Locations Nationwide</p>
          </div>
        </div>
      </div>
      
      <div class="bg-gray-50 rounded-2xl p-8 md:p-12">
        <div class="grid md:grid-cols-3 gap-8 text-center">
          <div>
            <div class="text-4xl font-bold text-blue-600 mb-2">25+</div>
            <div class="text-gray-600">Years of Partnership Excellence</div>
          </div>
          <div>
            <div class="text-4xl font-bold text-blue-600 mb-2">98%</div>
            <div class="text-gray-600">Customer Retention Rate</div>
          </div>
          <div>
            <div class="text-4xl font-bold text-blue-600 mb-2">24/7</div>
            <div class="text-gray-600">Customer Support</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Innovation & Sustainability Section -->
  <section class="py-20 bg-gradient-to-br from-green-50 to-blue-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <p class="text-base text-green-600 font-bold tracking-wide uppercase mb-4">Innovation & Sustainability</p>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">Building a Better Future</h2>
          <p class="text-xl text-gray-600 mb-8">
            Our commitment extends beyond manufacturing excellence to encompass environmental responsibility and social impact.
          </p>
          
          <div class="space-y-6">
            <div class="flex items-start">
              <div class="bg-green-100 p-2 rounded-lg mr-4">
                <Icon name="tabler:recycle" class="w-6 h-6 text-green-600" />
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Sustainable Operations</h3>
                <p class="text-gray-600">30% reduction in waste through optimized production processes and packaging innovations</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-blue-100 p-2 rounded-lg mr-4">
                <Icon name="tabler:users" class="w-6 h-6 text-blue-600" />
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Inclusive Employment</h3>
                <p class="text-gray-600">Providing meaningful employment opportunities for individuals with disabilities</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-purple-100 p-2 rounded-lg mr-4">
                <Icon name="tabler:bulb" class="w-6 h-6 text-purple-600" />
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Continuous Innovation</h3>
                <p class="text-gray-600">Dedicated R&D team developing next-generation products and processes</p>
              </div>
            </div>
          </div>
          
          <div class="mt-8">
            <a href="/about/sustainability" class="inline-flex items-center text-green-600 font-semibold hover:text-green-700">
              Learn About Our Impact <Icon name="tabler:arrow-right" class="w-5 h-5 ml-2" />
            </a>
          </div>
        </div>
        
        <div class="relative">
          <div class="aspect-[4/3] bg-white rounded-2xl shadow-xl overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1581093577421-f561a654a353?w=800"
              alt="Sustainable manufacturing practices"
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Latest News Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <p class="text-base text-blue-600 font-bold tracking-wide uppercase">News & Updates</p>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Latest from SatisPie</h2>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <article class="bg-gray-50 rounded-xl overflow-hidden hover:shadow-lg transition-shadow">
          <div class="aspect-[16/9] bg-gradient-to-br from-blue-100 to-blue-50"></div>
          <div class="p-6">
            <p class="text-sm text-blue-600 font-semibold mb-2">EXPANSION</p>
            <h3 class="text-xl font-bold text-gray-900 mb-2">New Production Line Increases Capacity by 40%</h3>
            <p class="text-gray-600 mb-4">Investment in state-of-the-art equipment enables us to meet growing demand from national retail partners.</p>
            <a href="/news" class="text-blue-600 font-medium hover:text-blue-700">Read More →</a>
          </div>
        </article>
        
        <article class="bg-gray-50 rounded-xl overflow-hidden hover:shadow-lg transition-shadow">
          <div class="aspect-[16/9] bg-gradient-to-br from-green-100 to-green-50"></div>
          <div class="p-6">
            <p class="text-sm text-green-600 font-semibold mb-2">SUSTAINABILITY</p>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Carbon Neutral Operations by 2025</h3>
            <p class="text-gray-600 mb-4">Ambitious sustainability goals position SatisPie as industry leader in environmental responsibility.</p>
            <a href="/news" class="text-blue-600 font-medium hover:text-blue-700">Read More →</a>
          </div>
        </article>
        
        <article class="bg-gray-50 rounded-xl overflow-hidden hover:shadow-lg transition-shadow">
          <div class="aspect-[16/9] bg-gradient-to-br from-purple-100 to-purple-50"></div>
          <div class="p-6">
            <p class="text-sm text-purple-600 font-semibold mb-2">INNOVATION</p>
            <h3 class="text-xl font-bold text-gray-900 mb-2">New Plant-Based Line Launches Q2 2024</h3>
            <p class="text-gray-600 mb-4">Responding to market demand with innovative plant-based pie options for health-conscious consumers.</p>
            <a href="/news" class="text-blue-600 font-medium hover:text-blue-700">Read More →</a>
          </div>
        </article>
      </div>
      
      <div class="text-center mt-12">
        <a href="/news" class="inline-flex items-center text-blue-600 font-semibold hover:text-blue-700">
          View All News & Press Releases <Icon name="tabler:arrow-right" class="w-5 h-5 ml-2" />
        </a>
      </div>
    </div>
  </section>
  
  <!-- CallToAction Section -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Start Partnership Discussion',
        href: '/contact',
        icon: 'tabler:users',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to Partner with <span class="text-blue-600">SatisPie Manufacturing?</span>
    </Fragment>

    <Fragment slot="subtitle">
      Join leading retailers and foodservice operators who trust us for quality, reliability, and innovation. <br class="hidden md:inline" />Let's discuss how we can help grow your business.
    </Fragment>
  </CallToAction>
</Layout>
