---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'Contact SatisPie Manufacturing - Partnership Inquiries',
  description: 'Contact SatisPie Manufacturing for private label, foodservice, and retail partnership opportunities. Rochester, NY facility.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-blue-50 to-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <p class="text-base text-blue-600 font-bold tracking-wide uppercase mb-4">Get In Touch</p>
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Let's Build Your Pie Program
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Our business development team is ready to discuss your needs and explore partnership opportunities. 
          Contact us to learn how SatisPie can help grow your business.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Options -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-3 gap-8 mb-16">
        <!-- Sales Inquiries -->
        <div class="bg-gradient-to-br from-blue-50 to-white p-8 rounded-xl border border-blue-100">
          <div class="bg-blue-600 w-14 h-14 rounded-lg flex items-center justify-center mb-6">
            <Icon name="tabler:briefcase" class="w-8 h-8 text-white" />
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">Business Development</h3>
          <p class="text-gray-600 mb-4">
            For new partnerships, private label programs, and retail opportunities
          </p>
          <div class="space-y-3">
            <a href="tel:+15854241240" class="flex items-center text-blue-600 hover:text-blue-700">
              <Icon name="tabler:phone" class="w-5 h-5 mr-2" />
              (585) 424-1240
            </a>
            <a href="mailto:sales@satispie.com" class="flex items-center text-blue-600 hover:text-blue-700">
              <Icon name="tabler:mail" class="w-5 h-5 mr-2" />
              sales@satispie.com
            </a>
          </div>
        </div>

        <!-- Customer Service -->
        <div class="bg-gradient-to-br from-green-50 to-white p-8 rounded-xl border border-green-100">
          <div class="bg-green-600 w-14 h-14 rounded-lg flex items-center justify-center mb-6">
            <Icon name="tabler:headset" class="w-8 h-8 text-white" />
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">Customer Service</h3>
          <p class="text-gray-600 mb-4">
            For existing customers - orders, logistics, and account support
          </p>
          <div class="space-y-3">
            <a href="tel:+15854241240" class="flex items-center text-green-600 hover:text-green-700">
              <Icon name="tabler:phone" class="w-5 h-5 mr-2" />
              (585) 424-1240
            </a>
            <a href="mailto:service@satispie.com" class="flex items-center text-green-600 hover:text-green-700">
              <Icon name="tabler:mail" class="w-5 h-5 mr-2" />
              service@satispie.com
            </a>
          </div>
        </div>

        <!-- Corporate Office -->
        <div class="bg-gradient-to-br from-purple-50 to-white p-8 rounded-xl border border-purple-100">
          <div class="bg-purple-600 w-14 h-14 rounded-lg flex items-center justify-center mb-6">
            <Icon name="tabler:building" class="w-8 h-8 text-white" />
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">Corporate Office</h3>
          <p class="text-gray-600 mb-4">
            Manufacturing facility and headquarters location
          </p>
          <address class="not-italic text-gray-600 space-y-2">
            <p>155 Balta Drive</p>
            <p>Rochester, NY 14623</p>
            <p class="pt-2">Hours: Mon-Fri 8AM-5PM EST</p>
          </address>
        </div>
      </div>

      <!-- Partnership Inquiry Form -->
      <div class="max-w-4xl mx-auto">
        <div class="bg-gray-50 rounded-2xl p-8 md:p-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">Partnership Inquiry Form</h2>
          <p class="text-gray-600 mb-8 text-center">
            Tell us about your business needs and we'll connect you with the right team member
          </p>

          <form action="https://formspree.io/f/xaylqjwn" method="POST" class="space-y-6">
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="firstName" class="block text-sm font-semibold text-gray-700 mb-2">
                  First Name <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="firstName"
                  name="firstName"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                />
              </div>

              <div>
                <label for="lastName" class="block text-sm font-semibold text-gray-700 mb-2">
                  Last Name <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="lastName"
                  name="lastName"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                />
              </div>
            </div>

            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="company" class="block text-sm font-semibold text-gray-700 mb-2">
                  Company <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="company"
                  name="company"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                />
              </div>

              <div>
                <label for="title" class="block text-sm font-semibold text-gray-700 mb-2">
                  Job Title
                </label>
                <input
                  type="text"
                  id="title"
                  name="title"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                />
              </div>
            </div>

            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
                  Business Email <span class="text-red-500">*</span>
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                />
              </div>

              <div>
                <label for="phone" class="block text-sm font-semibold text-gray-700 mb-2">
                  Phone Number <span class="text-red-500">*</span>
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                />
              </div>
            </div>

            <div>
              <label for="businessType" class="block text-sm font-semibold text-gray-700 mb-2">
                Business Type <span class="text-red-500">*</span>
              </label>
              <select
                id="businessType"
                name="businessType"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              >
                <option value="">Select your business type</option>
                <option value="retailer">Retailer - Grocery/Supermarket</option>
                <option value="foodservice">Foodservice - Restaurant/Hotel/Institution</option>
                <option value="distributor">Distributor/Wholesaler</option>
                <option value="privatelabel">Private Label Brand</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div>
              <label for="interest" class="block text-sm font-semibold text-gray-700 mb-2">
                Area of Interest <span class="text-red-500">*</span>
              </label>
              <select
                id="interest"
                name="interest"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              >
                <option value="">Select your primary interest</option>
                <option value="private-label">Private Label Manufacturing</option>
                <option value="bulk-orders">Bulk/Wholesale Orders</option>
                <option value="custom-products">Custom Product Development</option>
                <option value="distribution">Distribution Partnership</option>
                <option value="general">General Information</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-semibold text-gray-700 mb-2">
                Tell us about your needs <span class="text-red-500">*</span>
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                placeholder="Please describe your business needs, volume requirements, timeline, and any specific questions..."
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              ></textarea>
            </div>

            <!-- Hidden fields -->
            <input type="hidden" name="_subject" value="B2B Partnership Inquiry - SatisPie Manufacturing" />
            
            <div class="flex items-center justify-center">
              <button
                type="submit"
                class="px-8 py-4 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-all duration-200 shadow-lg hover:shadow-xl"
              >
                Submit Inquiry
              </button>
            </div>

            <p class="text-sm text-gray-500 text-center mt-4">
              We typically respond to all inquiries within 1-2 business days. For immediate assistance, please call (585) 424-1240.
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Links Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-8 text-center">Quick Resources</h2>
      <div class="grid md:grid-cols-4 gap-6">
        <a href="/capabilities/quality" class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition-shadow text-center">
          <Icon name="tabler:certificate" class="w-10 h-10 text-blue-600 mx-auto mb-3" />
          <h3 class="font-semibold text-gray-900">Quality & Certifications</h3>
        </a>
        
        <a href="/solutions" class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition-shadow text-center">
          <Icon name="tabler:package" class="w-10 h-10 text-green-600 mx-auto mb-3" />
          <h3 class="font-semibold text-gray-900">Manufacturing Solutions</h3>
        </a>
        
        <a href="/about" class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition-shadow text-center">
          <Icon name="tabler:building-factory-2" class="w-10 h-10 text-purple-600 mx-auto mb-3" />
          <h3 class="font-semibold text-gray-900">About SatisPie</h3>
        </a>
        
        <a href="/resources" class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition-shadow text-center">
          <Icon name="tabler:download" class="w-10 h-10 text-orange-600 mx-auto mb-3" />
          <h3 class="font-semibold text-gray-900">Resource Center</h3>
        </a>
      </div>
    </div>
  </section>
</Layout>