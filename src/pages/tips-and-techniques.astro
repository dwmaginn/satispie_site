---
import BaseLayout from '../layouts/BaseLayout.astro';
export const prerender = true;
const pageTitle = "Tips & Techniques";
const pageDescription = "Baking tips and techniques from SatisPie â€“ downloadable guides for perfect pies, including fundamentals and solutions to common baking challenges.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Hero Section -->
    <section class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-sp-text-primary mb-6">
        Tips & Techniques
      </h1>
      <p class="text-xl text-sp-text-secondary">
        Expert baking guides and resources from SatisPie
      </p>
    </section>

    <!-- Introduction -->
    <section class="mb-12">
      <div class="bg-sp-bg-light p-8 rounded-lg">
        <h2 class="text-2xl font-semibold text-sp-text-primary mb-4">Baking Resources</h2>
        <p class="text-sp-text-secondary text-lg">
          Here you'll find tips and techniques for baking pies at home or improving the look of your pies 
          if you're an in-store baker. Explore our "SatisPie University" guides below for expert advice.
        </p>
      </div>
    </section>

    <!-- PDF Resources -->
    <section class="space-y-8">
      <!-- SatisPie 101 -->
      <div class="bg-white border border-gray-200 rounded-lg p-8 shadow-sm">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between">
          <div class="mb-6 md:mb-0 md:mr-8">
            <h2 class="text-3xl font-semibold text-sp-text-primary mb-4">
              SatisPie 101: Baking Fundamentals
            </h2>
            <p class="text-sp-text-secondary mb-4">
              This document outlines essential fundamentals of baking with SatisPie, covering core techniques 
              and methods to ensure consistently delicious results. Perfect for beginners and seasoned bakers 
              looking to master the art of pie-making!
            </p>
            <div class="flex items-center text-sm text-sp-text-secondary">
              <span class="mr-4">ðŸ“„ PDF Document</span>
              <span>~389 KB</span>
            </div>
          </div>
          <div class="flex-shrink-0">
            <a 
              href="/docs/baking-fundamentals.pdf" 
              class="inline-flex items-center bg-sp-primary text-white px-6 py-3 rounded-lg font-semibold hover:bg-sp-primary-dark transition-colors"
              target="_blank" 
              rel="noopener"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
              Download Guide
            </a>
          </div>
        </div>
      </div>

      <!-- SatisPie 102 -->
      <div class="bg-white border border-gray-200 rounded-lg p-8 shadow-sm">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between">
          <div class="mb-6 md:mb-0 md:mr-8">
            <h2 class="text-3xl font-semibold text-sp-text-primary mb-4">
              SatisPie 102: Baking Solutions
            </h2>
            <p class="text-sp-text-secondary mb-4">
              Advanced techniques and solutions for common baking challenges. This guide covers troubleshooting, 
              advanced decorating techniques, and professional tips for achieving bakery-quality results at home 
              or in your commercial kitchen.
            </p>
            <div class="flex items-center text-sm text-sp-text-secondary">
              <span class="mr-4">ðŸ“„ PDF Document</span>
              <span>~137 KB</span>
            </div>
          </div>
          <div class="flex-shrink-0">
            <a 
              href="/docs/baking-solutions.pdf" 
              class="inline-flex items-center bg-sp-primary text-white px-6 py-3 rounded-lg font-semibold hover:bg-sp-primary-dark transition-colors"
              target="_blank" 
              rel="noopener"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"></path>
