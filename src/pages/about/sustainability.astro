---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'Sustainability & ESG | SatisPie Manufacturing',
  description: 'Our commitment to environmental sustainability, social responsibility, and governance. Building a better future through responsible manufacturing.',
};

const sustainabilityMetrics = [
  { value: '30%', label: 'Waste Reduction Since 2020', icon: 'tabler:recycle' },
  { value: '25%', label: 'Energy Efficiency Improvement', icon: 'tabler:bolt' },
  { value: '40%', label: 'Water Usage Reduction', icon: 'tabler:droplet' },
  { value: '100%', label: 'Recyclable Packaging by 2025', icon: 'tabler:package' },
];

const sdgGoals = [
  { number: 2, title: 'Zero Hunger', description: 'Providing nutritious food products' },
  { number: 8, title: 'Decent Work', description: 'Inclusive employment opportunities' },
  { number: 12, title: 'Responsible Production', description: 'Sustainable manufacturing practices' },
  { number: 13, title: 'Climate Action', description: 'Reducing our carbon footprint' },
];
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-green-50 to-blue-50 py-20 overflow-hidden">
    <div class="absolute inset-0 bg-grid-gray-100 [mask-image:linear-gradient(0deg,white,rgba(255,255,255,0.6))] -z-10"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <p class="text-base text-green-600 font-bold tracking-wide uppercase mb-4">Sustainability & ESG</p>
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Building a <span class="text-green-600">Sustainable Future</span>
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          At SatisPie Manufacturing, sustainability isn't just a goalâ€”it's embedded in everything we do. 
          From our production processes to our social mission, we're committed to creating positive impact.
        </p>
      </div>
    </div>
  </section>

  <!-- Key Metrics -->
  <section class="py-12 bg-white -mt-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-2xl shadow-xl p-8">
        <div class="grid md:grid-cols-4 gap-8">
          {sustainabilityMetrics.map((metric) => (
            <div class="text-center">
              <div class="bg-green-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
                <Icon name={metric.icon} class="w-8 h-8 text-green-600" />
              </div>
              <div class="text-3xl font-bold text-gray-900 mb-2">{metric.value}</div>
              <div class="text-sm text-gray-600">{metric.label}</div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Three Pillars -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Our ESG Commitment</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Three pillars guide our approach to responsible business practices
        </p>
      </div>

      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Environmental -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
          <div class="bg-gradient-to-br from-green-500 to-green-600 p-6">
            <Icon name="tabler:plant-2" class="w-12 h-12 text-white mb-3" />
            <h3 class="text-2xl font-bold text-white">Environmental</h3>
          </div>
          <div class="p-6">
            <p class="text-gray-600 mb-6">
              Minimizing our environmental footprint through innovative practices and continuous improvement
            </p>
            <ul class="space-y-3">
              <li class="flex items-start">
                <Icon name="tabler:check" class="w-5 h-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                <span class="text-gray-700">Carbon neutral operations by 2030</span>
              </li>
              <li class="flex items-start">
                <Icon name="tabler:check" class="w-5 h-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                <span class="text-gray-700">Zero waste to landfill initiative</span>
              </li>
              <li class="flex items-start">
                <Icon name="tabler:check" class="w-5 h-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                <span class="text-gray-700">Sustainable ingredient sourcing</span>
              </li>
              <li class="flex items-start">
                <Icon name="tabler:check" class="w-5 h-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                <span class="text-gray-700">Renewable energy adoption</span>
              </li>
              <li class="flex items-start">
                <Icon name="tabler:check" class="w-5 h-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                <span class="text-gray-700">Water conservation systems</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- Social -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
          <div class="bg-gradient-to-br from-blue-500 to-blue-600 p-6">
            <Icon name="tabler:users" class="w-12 h-12 text-white mb-3" />
            <h3 class="text-2xl font-bold text-white">Social</h3>
          </div>
          <div class="p-6">
            <p class="text-gray-600 mb-6">
              Creating positive social impact through inclusive employment and community engagement
            </p>
            <ul class="space-y-3">
              <li class="flex items-start">
                <Icon name="tabler:check" class="w-5 h-5 text-blue-500 mr-2 mt-0.5 flex-shrink-0" />
                <span class="text-gray-700">30% workforce from disability community</span>
              </li>
              <li class="flex items-start">
                <Icon name="tabler:check" class="w-5 h-5 text-blue-500 mr-2 mt-0.5 flex-shrink-0" />
                <span class="text-gray-700">Living wage for all employees</span>
              </li>
              <li class="flex items-start">
                <Icon name="tabler:check" class="w-5 h-5 text-blue-500 mr-2 mt-0.5 flex-shrink-0" />
                <span class="text-gray-700">Community partnership programs</span>
              </li>
              <li class="flex items-start">
                <Icon name="tabler:check" class="w-5 h-5 text-blue-500 mr-2 mt-0.5 flex-shrink-0" />
                <span class="text-gray-700">Employee development initiatives</span>
              </li>
              <li class="flex items-start">
                <Icon name="tabler:check" class="w-5 h-5 text-blue-500 mr-2 mt-0.5 flex-shrink-0" />
                <span class="text-gray-700">Supplier diversity program</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- Governance -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
          <div class="bg-gradient-to-br from-purple-500 to-purple-600 p-6">
            <Icon name="tabler:shield-check" class="w-12 h-12 text-white mb-3" />
            <h3 class="text-2xl font-bold text-white">Governance</h3>
          </div>
          <div class="p-6">
            <p class="text-gray-600 mb-6">
              Maintaining the highest standards of ethics, transparency, and accountability
            </p>
            <ul class="space-y-3">
              <li class="flex items-start">
                <Icon name="tabler:check" class="w-5 h-5 text-purple-500 mr-2 mt-0.5 flex-shrink-0" />
                <span class="text-gray-700">Independent board oversight</span>
              </li>
              <li class="flex items-start">
                <Icon name="tabler:check" class="w-5 h-5 text-purple-500 mr-2 mt-0.5 flex-shrink-0" />
                <span class="text-gray-700">Annual sustainability reporting</span>
              </li>
              <li class="flex items-start">
                <Icon name="tabler:check" class="w-5 h-5 text-purple-500 mr-2 mt-0.5 flex-shrink-0" />
                <span class="text-gray-700">Ethical sourcing policies</span>
              </li>
              <li class="flex items-start">
                <Icon name="tabler:check" class="w-5 h-5 text-purple-500 mr-2 mt-0.5 flex-shrink-0" />
                <span class="text-gray-700">Data security & privacy</span>
              </li>
              <li class="flex items-start">
                <Icon name="tabler:check" class="w-5 h-5 text-purple-500 mr-2 mt-0.5 flex-shrink-0" />
                <span class="text-gray-700">Stakeholder engagement</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Environmental Initiatives -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <p class="text-base text-green-600 font-bold tracking-wide uppercase mb-4">Environmental Leadership</p>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Reducing Our Environmental Impact</h2>
          <p class="text-lg text-gray-600 mb-8">
            Through innovative technologies and operational excellence, we're dramatically reducing our environmental footprint while maintaining the highest quality standards.
          </p>
          
          <div class="space-y-6">
            <div>
              <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-semibold text-gray-700">Renewable Energy Usage</span>
                <span class="text-sm text-gray-600">65%</span>
              </div>
              <div class="bg-gray-200 rounded-full h-3">
                <div class="bg-green-500 h-3 rounded-full" style="width: 65%"></div>
              </div>
            </div>
            
            <div>
              <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-semibold text-gray-700">Waste Diversion Rate</span>
                <span class="text-sm text-gray-600">82%</span>
              </div>
              <div class="bg-gray-200 rounded-full h-3">
                <div class="bg-green-500 h-3 rounded-full" style="width: 82%"></div>
              </div>
            </div>
            
            <div>
              <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-semibold text-gray-700">Sustainable Packaging</span>
                <span class="text-sm text-gray-600">75%</span>
              </div>
              <div class="bg-gray-200 rounded-full h-3">
                <div class="bg-green-500 h-3 rounded-full" style="width: 75%"></div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="relative">
          <div class="aspect-[4/3] bg-white rounded-2xl shadow-xl overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1497435334941-8c899ee9e8e9?w=800"
              alt="Sustainable manufacturing facility"
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Social Impact -->
  <section class="py-20 bg-gradient-to-br from-blue-50 to-purple-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <p class="text-base text-blue-600 font-bold tracking-wide uppercase">Social Impact</p>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Empowering People, Strengthening Communities</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Our commitment to inclusive employment has transformed hundreds of lives while building a stronger workforce
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-white rounded-xl p-6 text-center shadow-lg">
          <div class="text-4xl font-bold text-blue-600 mb-2">250+</div>
          <div class="text-gray-600">Jobs Created</div>
          <div class="text-sm text-gray-500 mt-2">For individuals with disabilities</div>
        </div>
        
        <div class="bg-white rounded-xl p-6 text-center shadow-lg">
          <div class="text-4xl font-bold text-green-600 mb-2">$2M+</div>
          <div class="text-gray-600">Community Investment</div>
          <div class="text-sm text-gray-500 mt-2">Annual local economic impact</div>
        </div>
        
        <div class="bg-white rounded-xl p-6 text-center shadow-lg">
          <div class="text-4xl font-bold text-purple-600 mb-2">95%</div>
          <div class="text-gray-600">Retention Rate</div>
          <div class="text-sm text-gray-500 mt-2">Employee satisfaction</div>
        </div>
        
        <div class="bg-white rounded-xl p-6 text-center shadow-lg">
          <div class="text-4xl font-bold text-orange-600 mb-2">5</div>
          <div class="text-gray-600">National Awards</div>
          <div class="text-sm text-gray-500 mt-2">For inclusive employment</div>
        </div>
      </div>

      <div class="mt-12 bg-white rounded-2xl p-8 shadow-xl">
        <blockquote class="text-center">
          <p class="text-xl text-gray-700 italic mb-4">
            "SatisPie doesn't just talk about inclusionâ€”they live it every day. Their commitment to providing meaningful employment has changed my life and the lives of so many others in our community."
          </p>
          <cite class="text-gray-600 font-semibold">- Employee Partner, 5 Years with SatisPie</cite>
        </blockquote>
      </div>
    </div>
  </section>

  <!-- UN SDG Alignment -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">UN Sustainable Development Goals</h2>
        <p class="text-xl text-gray-600">Our operations directly contribute to global sustainability objectives</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {sdgGoals.map((goal) => (
          <div class="bg-gradient-to-br from-blue-50 to-green-50 rounded-xl p-6 border border-blue-100">
            <div class="bg-gradient-to-br from-blue-600 to-green-600 text-white rounded-lg w-14 h-14 flex items-center justify-center mb-4 font-bold text-xl">
              {goal.number}
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">{goal.title}</h3>
            <p class="text-sm text-gray-600">{goal.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- 2030 Goals -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <p class="text-base text-green-600 font-bold tracking-wide uppercase">Looking Forward</p>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Our 2030 Sustainability Goals</h2>
      </div>

      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-2xl shadow-xl p-8 md:p-12">
          <div class="space-y-8">
            <div class="flex items-start">
              <div class="bg-green-100 rounded-lg p-3 mr-4">
                <Icon name="tabler:leaf" class="w-6 h-6 text-green-600" />
              </div>
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Carbon Neutral Operations</h3>
                <p class="text-gray-600">Achieve net-zero carbon emissions across all operations through renewable energy and carbon offset programs</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="bg-blue-100 rounded-lg p-3 mr-4">
                <Icon name="tabler:recycle" class="w-6 h-6 text-blue-600" />
              </div>
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-gray-900 mb-2">100% Sustainable Packaging</h3>
                <p class="text-gray-600">Transition all packaging to recyclable, compostable, or reusable materials</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="bg-purple-100 rounded-lg p-3 mr-4">
                <Icon name="tabler:droplet" class="w-6 h-6 text-purple-600" />
              </div>
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-gray-900 mb-2">50% Water Reduction</h3>
                <p class="text-gray-600">Cut water usage in half through advanced recycling and conservation technologies</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="bg-orange-100 rounded-lg p-3 mr-4">
                <Icon name="tabler:users" class="w-6 h-6 text-orange-600" />
              </div>
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-gray-900 mb-2">500 Inclusive Jobs</h3>
                <p class="text-gray-600">Double our inclusive employment program to create 500 jobs for individuals with disabilities</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-green-600 to-blue-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Partner with Purpose</h2>
      <p class="text-xl text-green-100 mb-8">
        When you choose SatisPie, you're not just getting quality productsâ€”you're supporting sustainable practices 
        and positive social impact. Together, we can build a better future.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/resources"
          class="inline-flex items-center justify-center px-8 py-4 bg-white text-green-600 rounded-lg font-semibold hover:bg-gray-100 transition-all duration-200 shadow-lg"
        >
          <Icon name="tabler:download" class="w-5 h-5 mr-2" />
          Download Sustainability Report
        </a>
        <a
          href="/contact"
          class="inline-flex items-center justify-center px-8 py-4 border-2 border-white text-white rounded-lg font-semibold hover:bg-white hover:text-green-600 transition-all duration-200"
        >
          Learn More About Our Impact
        </a>
      </div>
    </div>
  </section>
</Layout>