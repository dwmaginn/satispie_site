---
import BaseLayout from '~/layouts/BaseLayout.astro';
import StructuredData from '~/components/common/StructuredData.astro';

const productData = {
  name: 'Classic Apple Pie',
  description: 'Our signature all-butter crust filled with fresh, hand-picked apples and warm cinnamon spices. Perfect for any occasion.',
  image: '/satispie-default-pie.png',
  rating: {
    value: 4.8,
    count: 127
  }
};

const breadcrumbData = {
  items: [
    { name: 'Home', url: 'https://satispie.com' },
    { name: 'Products', url: 'https://satispie.com/products' },
    { name: 'Apple Pie', url: 'https://satispie.com/products/apple-pie' }
  ]
};
---

<BaseLayout title="Classic Apple Pie" description={productData.description}>
  <StructuredData type="product" data={productData} />
  <StructuredData type="breadcrumb" data={breadcrumbData} />

  <div class="container mx-auto px-4 py-8">
    <nav class="text-sm text-gray-600 mb-4">
      <a href="/" class="hover:text-sp-primary">Home</a> / 
      <a href="/products" class="hover:text-sp-primary">Products</a> / 
      <span class="text-gray-900">Apple Pie</span>
    </nav>

    <div class="grid md:grid-cols-2 gap-8">
      <div>
        <img 
          src={productData.image} 
          alt={productData.name}
          class="w-full rounded-lg shadow-lg"
          width="600"
          height="400"
        />
      </div>

      <div>
        <h1 class="text-3xl font-bold text-gray-900 mb-4">{productData.name}</h1>
        
        <div class="flex items-center mb-4">
          <div class="flex text-yellow-400">
            {[...Array(5)].map((_, i) => (
              <svg class={`w-5 h-5 ${i < Math.floor(productData.rating.value) ? 'text-yellow-400' : 'text-gray-300'}`} fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          <span class="ml-2 text-sm text-gray-600">
            {productData.rating.value} ({productData.rating.count} reviews)
          </span>
        </div>

        <p class="text-gray-700 mb-6">{productData.description}</p>

        <div class="mb-6">
          <h3 class="text-lg font-semibold mb-2">Ingredients</h3>
          <ul class="text-sm text-gray-600 space-y-1">
            <li>• All-butter pie crust</li>
            <li>• Fresh hand-picked apples</li>
            <li>• Cinnamon and nutmeg</li>
            <li>• Pure vanilla extract</li>
            <li>• Brown sugar</li>
          </ul>
        </div>

        <div class="mb-6">
          <h3 class="text-lg font-semibold mb-2">Nutrition (per slice)</h3>
          <div class="grid grid-cols-3 gap-4 text-sm">
            <div>
              <span class="font-medium">Calories:</span> 320
            </div>
            <div>
              <span class="font-medium">Fat:</span> 12g
            </div>
            <div>
              <span class="font-medium">Carbs:</span> 45g
            </div>
          </div>
        </div>

        <div class="flex items-center justify-between">
          <button class="bg-sp-primary text-white px-6 py-3 rounded-lg hover:bg-sp-primary-dark transition-colors">
            Order Now
          </button>
        </div>
      </div>
    </div>
  </div>
</BaseLayout> 