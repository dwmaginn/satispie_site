---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'News & Press | SatisPie Manufacturing',
  description: 'Latest news, press releases, and industry updates from SatisPie Manufacturing. Stay informed about our expansion, innovations, and partnerships.',
};

// Sample news data - in production this would come from a CMS or database
const newsItems = [
  {
    date: '2024-01-15',
    category: 'Expansion',
    title: 'SatisPie Completes $15M Facility Expansion, Increases Production Capacity by 40%',
    excerpt: 'Major investment in state-of-the-art equipment positions company to meet growing demand from national retail partners.',
    image: 'https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?w=600',
    featured: true,
  },
  {
    date: '2024-01-08',
    category: 'Partnership',
    title: 'SatisPie Partners with Major Midwest Grocery Chain for Private Label Program',
    excerpt: 'Multi-year agreement includes exclusive seasonal pie offerings across 500+ store locations.',
    image: 'https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?w=600',
  },
  {
    date: '2023-12-20',
    category: 'Sustainability',
    title: 'SatisPie Achieves 30% Reduction in Manufacturing Waste',
    excerpt: 'Sustainability initiatives deliver environmental benefits while improving operational efficiency.',
    image: 'https://images.unsplash.com/photo-1532996122724-e3c354a0b15b?w=600',
  },
  {
    date: '2023-11-15',
    category: 'Innovation',
    title: 'New Plant-Based Pie Line Launches Q1 2024',
    excerpt: 'Responding to market demand with innovative plant-based options for health-conscious consumers.',
    image: 'https://images.unsplash.com/photo-1559027615-cd4628902d4a?w=600',
  },
  {
    date: '2023-10-30',
    category: 'Awards',
    title: 'SatisPie Receives National Recognition for Inclusive Employment Practices',
    excerpt: 'Department of Labor honors company for exceptional disability inclusion program.',
    image: 'https://images.unsplash.com/photo-1552664730-d307ca884978?w=600',
  },
  {
    date: '2023-09-22',
    category: 'Product',
    title: 'Fall Seasonal Line Sees Record Pre-Orders from Retail Partners',
    excerpt: 'Pumpkin and apple pie varieties drive 25% increase in seasonal category sales.',
    image: 'https://images.unsplash.com/photo-1481391032119-d89fee407e44?w=600',
  },
];

const getCategoryColor = (category: string) => {
  const colors: Record<string, string> = {
    Expansion: 'blue',
    Partnership: 'green',
    Sustainability: 'emerald',
    Innovation: 'purple',
    Awards: 'yellow',
    Product: 'orange',
  };
  return colors[category] || 'gray';
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-gray-50 to-blue-50 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <p class="text-base text-blue-600 font-bold tracking-wide uppercase mb-4">News & Press</p>
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Latest from SatisPie Manufacturing
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Stay informed about our latest developments, partnerships, and industry innovations
        </p>
      </div>
    </div>
  </section>

  <!-- Featured Story -->
  {newsItems[0] && (
    <section class="py-12 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-gradient-to-br from-blue-50 to-white rounded-2xl overflow-hidden shadow-xl">
          <div class="grid lg:grid-cols-2 gap-0">
            <div class="aspect-[16/9] lg:aspect-auto">
              <img 
                src={newsItems[0].image} 
                alt={newsItems[0].title}
                class="w-full h-full object-cover"
              />
            </div>
            <div class="p-8 lg:p-12 flex flex-col justify-center">
              <div class="flex items-center space-x-4 mb-4">
                <span class={`inline-block px-3 py-1 bg-${getCategoryColor(newsItems[0].category)}-100 text-${getCategoryColor(newsItems[0].category)}-700 text-sm font-semibold rounded-full uppercase tracking-wider`}>
                  {newsItems[0].category}
                </span>
                <span class="text-gray-500">{new Date(newsItems[0].date).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}</span>
              </div>
              <h2 class="text-3xl font-bold text-gray-900 mb-4">{newsItems[0].title}</h2>
              <p class="text-lg text-gray-600 mb-6">{newsItems[0].excerpt}</p>
              <a href="#" class="inline-flex items-center text-blue-600 font-semibold hover:text-blue-700">
                Read Full Story <Icon name="tabler:arrow-right" class="w-5 h-5 ml-2" />
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- News Grid -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12">Recent News</h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {newsItems.slice(1).map((item) => (
          <article class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
            <div class="aspect-[16/9]">
              <img 
                src={item.image} 
                alt={item.title}
                class="w-full h-full object-cover"
              />
            </div>
            <div class="p-6">
              <div class="flex items-center space-x-3 mb-3">
                <span class={`inline-block px-2 py-1 bg-${getCategoryColor(item.category)}-100 text-${getCategoryColor(item.category)}-700 text-xs font-semibold rounded uppercase tracking-wider`}>
                  {item.category}
                </span>
                <span class="text-sm text-gray-500">{new Date(item.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</span>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3 line-clamp-2">{item.title}</h3>
              <p class="text-gray-600 mb-4 line-clamp-3">{item.excerpt}</p>
              <a href="#" class="text-blue-600 font-medium hover:text-blue-700 flex items-center">
                Read More <Icon name="tabler:arrow-right" class="w-4 h-4 ml-1" />
              </a>
            </div>
          </article>
        ))}
      </div>

      <!-- Load More -->
      <div class="text-center mt-12">
        <button class="px-8 py-3 border-2 border-gray-300 text-gray-700 rounded-lg font-semibold hover:border-blue-600 hover:text-blue-600 transition-all duration-200">
          Load More Articles
        </button>
      </div>
    </div>
  </section>

  <!-- Press Resources -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-gradient-to-br from-blue-600 to-blue-700 rounded-2xl p-8 md:p-12 text-white">
        <div class="grid lg:grid-cols-2 gap-8 items-center">
          <div>
            <h2 class="text-3xl font-bold mb-4">Press Resources</h2>
            <p class="text-blue-100 mb-6">
              Access our media kit, press releases, high-resolution images, and company information for your reporting needs.
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
              <a href="/resources/media-kit" class="inline-flex items-center justify-center px-6 py-3 bg-white text-blue-600 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
                <Icon name="tabler:download" class="w-5 h-5 mr-2" />
                Download Media Kit
              </a>
              <a href="/contact" class="inline-flex items-center justify-center px-6 py-3 border-2 border-white text-white rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition-colors">
                Press Inquiries
              </a>
            </div>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
              <Icon name="tabler:photo" class="w-8 h-8 text-white mb-2" />
              <div class="text-2xl font-bold text-white">50+</div>
              <div class="text-blue-100 text-sm">High-res Images</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
              <Icon name="tabler:file-text" class="w-8 h-8 text-white mb-2" />
              <div class="text-2xl font-bold text-white">100+</div>
              <div class="text-blue-100 text-sm">Press Releases</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
              <Icon name="tabler:brand-youtube" class="w-8 h-8 text-white mb-2" />
              <div class="text-2xl font-bold text-white">25+</div>
              <div class="text-blue-100 text-sm">Video Assets</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
              <Icon name="tabler:certificate" class="w-8 h-8 text-white mb-2" />
              <div class="text-2xl font-bold text-white">15+</div>
              <div class="text-blue-100 text-sm">Awards</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter Signup -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <Icon name="tabler:mail" class="w-16 h-16 text-blue-600 mx-auto mb-6" />
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Stay Informed</h2>
      <p class="text-xl text-gray-600 mb-8">
        Get the latest SatisPie news and industry insights delivered to your inbox
      </p>
      <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
        <input
          type="email"
          placeholder="Enter your business email"
          class="flex-1 px-6 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          required
        />
        <button
          type="submit"
          class="px-8 py-3 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition-colors duration-200 shadow-lg hover:shadow-xl"
        >
          Subscribe
        </button>
      </form>
    </div>
  </section>
</Layout>