---
import BaseLayout from '../layouts/BaseLayout.astro';
export const prerender = true;
const pageTitle = "Page Not Found";
---

<BaseLayout title={pageTitle} description="404 - Page not found">
  <div class="min-h-screen flex items-center justify-center px-4">
    <div class="max-w-md text-center">
      <h1 class="text-6xl md:text-8xl font-bold text-sp-text-primary mb-8">
        404
      </h1>
      <h2 class="text-2xl md:text-3xl font-semibold text-sp-text-primary mb-4">
        Page Not Found
      </h2>
      <p class="text-lg text-sp-text-secondary mb-8">
        Oops! The page you're looking for doesn't exist.
      </p>
      <p class="text-sp-text-secondary mb-8">
        <a href="/" class="text-sp-primary hover:underline">
          Go back to the Home page
        </a> or use the menu to find what you need.
      </p>
      <a 
        href="/" 
        class="inline-block bg-sp-primary text-white px-6 py-3 rounded-lg font-semibold hover:bg-sp-primary-dark transition-colors"
      >
        Return to Home
      </a>
    </div>
  </div>
</BaseLayout>
