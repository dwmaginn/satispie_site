<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About SatisPie"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'SatisPie Manufacturing Facility',
    }}
  >
    <Fragment slot="title">
      Quality Pre-Baked Pies & <br />
      <span class="text-accent dark:text-white">Dessert Manufacturing</span>
    </Fragment>

    <Fragment slot="subtitle">
      SatisPie is a leading manufacturer of pre-baked pies, waffles, and pancakes serving retail and foodservice customers. 
      Our state-of-the-art facility in Rochester, NY produces quality frozen desserts under strict SQF, HACCP & GMP controls.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="SatisPie Manufacturing Statistics"
    stats={[
      { title: 'Years in Business', amount: '25+' },
      { title: 'Pie Varieties', amount: '12+' },
      { title: 'Quality Certifications', amount: '3' },
      { title: 'Customer Satisfaction', amount: '99%' },
