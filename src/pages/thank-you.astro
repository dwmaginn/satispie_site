---
import Layout from '~/layouts/Layout.astro';
import { Icon } from 'astro-icon/components';

export const prerender = true;

const metadata = {
  title: 'Thank You - SatisPie',
  description: 'Thank you for contacting SatisPie. We appreciate your message and will get back to you soon.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Thank You Section -->
  <section class="relative bg-gradient-to-br from-green-50 to-blue-50 py-20 md:py-28">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="bg-white rounded-2xl p-8 md:p-12 shadow-xl">
        <div class="mb-8">
          <div class="bg-green-100 rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-6">
            <Icon name="tabler:check" class="w-10 h-10 text-green-600" />
          </div>
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
            Thank You!
          </h1>
          <p class="text-xl text-gray-600 mb-8">
            Your message has been received successfully. We appreciate you taking the time to reach out to us.
          </p>
        </div>

        <div class="bg-gray-50 rounded-xl p-6 mb-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">What happens next?</h2>
          <div class="space-y-4 text-left">
            <div class="flex items-start gap-4">
              <div class="bg-blue-100 rounded-full w-8 h-8 flex items-center justify-center flex-shrink-0 mt-1">
                <span class="text-blue-600 font-bold text-sm">1</span>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">We'll review your message</h3>
                <p class="text-gray-600">Our team will carefully review your inquiry and determine the best person to help you.</p>
              </div>
            </div>
            <div class="flex items-start gap-4">
              <div class="bg-blue-100 rounded-full w-8 h-8 flex items-center justify-center flex-shrink-0 mt-1">
                <span class="text-blue-600 font-bold text-sm">2</span>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">You'll hear from us soon</h3>
                <p class="text-gray-600">We typically respond within 24-48 hours during business days.</p>
              </div>
            </div>
            <div class="flex items-start gap-4">
              <div class="bg-blue-100 rounded-full w-8 h-8 flex items-center justify-center flex-shrink-0 mt-1">
                <span class="text-blue-600 font-bold text-sm">3</span>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">We'll provide a solution</h3>
                <p class="text-gray-600">Whether it's answering questions, providing quotes, or scheduling meetings, we're here to help.</p>
              </div>
            </div>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/"
            class="inline-flex items-center justify-center px-8 py-3 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition-colors duration-200"
          >
            <Icon name="tabler:home" class="w-5 h-5 mr-2" />
            Back to Home
          </a>
          <a
            href="/products"
            class="inline-flex items-center justify-center px-8 py-3 border-2 border-gray-300 text-gray-700 rounded-lg font-semibold hover:border-blue-600 hover:text-blue-600 transition-colors duration-200"
          >
            <Icon name="tabler:package" class="w-5 h-5 mr-2" />
            View Products
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Additional Resources -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          While You Wait
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Explore our website to learn more about our products and company
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-6 text-center">
          <Icon name="tabler:package" class="w-12 h-12 text-blue-600 mx-auto mb-4" />
          <h3 class="text-xl font-bold text-gray-900 mb-2">Our Products</h3>
          <p class="text-gray-600 mb-4">
            Discover our complete line of premium pies, waffles, and pancakes.
          </p>
          <a
            href="/products"
            class="inline-flex items-center text-blue-600 font-medium hover:text-blue-700"
          >
            Browse Products
            <Icon name="tabler:arrow-right" class="w-4 h-4 ml-1" />
          </a>
        </div>

        <div class="bg-gradient-to-br from-orange-50 to-orange-100 rounded-xl p-6 text-center">
          <Icon name="tabler:map-pin" class="w-12 h-12 text-orange-600 mx-auto mb-4" />
          <h3 class="text-xl font-bold text-gray-900 mb-2">Find Stores</h3>
          <p class="text-gray-600 mb-4">
            Locate retailers near you that carry SatisPie products.
          </p>
          <a
            href="/where-to-buy"
            class="inline-flex items-center text-orange-600 font-medium hover:text-orange-700"
          >
            Find Locations
            <Icon name="tabler:arrow-right" class="w-4 h-4 ml-1" />
          </a>
        </div>

        <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-xl p-6 text-center">
          <Icon name="tabler:book" class="w-12 h-12 text-green-600 mx-auto mb-4" />
          <h3 class="text-xl font-bold text-gray-900 mb-2">Baking Tips</h3>
          <p class="text-gray-600 mb-4">
            Learn professional techniques and secrets from our expert team.
          </p>
          <a
            href="/tips-and-tricks"
            class="inline-flex items-center text-green-600 font-medium hover:text-green-700"
          >
            Read Tips
            <Icon name="tabler:arrow-right" class="w-4 h-4 ml-1" />
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Information -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-8">Need Immediate Assistance?</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div>
          <Icon name="tabler:phone" class="w-8 h-8 text-blue-600 mx-auto mb-4" />
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Call Us</h3>
          <p class="text-gray-600">(555) 123-4567</p>
          <p class="text-sm text-gray-500">Mon-Fri, 8AM-5PM</p>
        </div>
        <div>
          <Icon name="tabler:mail" class="w-8 h-8 text-blue-600 mx-auto mb-4" />
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Email Us</h3>
          <p class="text-gray-600">info@satispie.com</p>
          <p class="text-sm text-gray-500">We'll respond within 24 hours</p>
        </div>
        <div>
          <Icon name="tabler:map-pin" class="w-8 h-8 text-blue-600 mx-auto mb-4" />
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Visit Us</h3>
          <p class="text-gray-600">123 Baking Street</p>
          <p class="text-sm text-gray-500">Anytown, CA 90210</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
