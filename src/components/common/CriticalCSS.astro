---
// Critical CSS Inlining Component
// This component inlines critical CSS for above-the-fold content
// to improve Largest Contentful Paint (LCP) performance

const criticalCSS = `
  /* Critical CSS for above-the-fold content */
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
  }
  
  /* Critical layout styles */
  .container {
    width: 100%;
    margin-left: auto;
    margin-right: auto;
    padding-left: 1rem;
    padding-right: 1rem;
  }
  
  @media (min-width: 640px) {
    .container {
      max-width: 640px;
    }
  }
  
  @media (min-width: 768px) {
    .container {
      max-width: 768px;
    }
  }
  
  @media (min-width: 1024px) {
    .container {
      max-width: 1024px;
    }
  }
  
  @media (min-width: 1280px) {
    .container {
      max-width: 1280px;
    }
  }
  
  /* Critical typography */
  h1, h2, h3, h4, h5, h6 {
    font-weight: 600;
    line-height: 1.25;
  }
  
  h1 {
    font-size: 2.25rem;
    line-height: 2.5rem;
  }
  
  h2 {
    font-size: 1.875rem;
    line-height: 2.25rem;
  }
  
  /* Critical button styles */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.375rem;
    font-weight: 500;
    transition-property: color, background-color, border-color, text-decoration-color, fill, stroke;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 150ms;
  }
  
  .btn-primary {
    background-color: rgb(var(--accent));
    color: white;
    padding: 0.5rem 1rem;
  }
  
  .btn-primary:hover {
    background-color: rgb(var(--accent-dark));
  }
  
  /* Critical navigation styles */
  .navbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
  }
  
  .navbar-brand {
    font-weight: 700;
    font-size: 1.5rem;
    text-decoration: none;
    color: inherit;
  }
  
  /* Critical hero section */
  .hero {
    padding: 4rem 0;
    text-align: center;
  }
  
  .hero h1 {
    margin-bottom: 1rem;
  }
  
  .hero p {
    font-size: 1.125rem;
    margin-bottom: 2rem;
    opacity: 0.8;
  }
  
  /* Critical image styles */
  img {
    max-width: 100%;
    height: auto;
  }
  
  /* Critical loading states */
  .loading {
    opacity: 0.6;
    transition: opacity 0.3s ease;
  }
  
  .loaded {
    opacity: 1;
  }
`;
---

<style set:html={criticalCSS} /> 