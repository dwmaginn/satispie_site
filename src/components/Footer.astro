---
import { Icon } from 'astro-icon/components';
import { getHomePermalink } from '~/utils/permalinks';

const currentYear = new Date().getFullYear();

// Footer navigation links
const footerLinks = {
  products: [
    { text: 'All Products', href: '/products' },
    { text: 'Fruit Pies', href: '/products/fruit-pies' },
    { text: 'Seasonal Pies', href: '/products/seasonal' },
    { text: 'Specialty Items', href: '/products/specialty' },
  ],
  company: [
    { text: 'About Us', href: '/about' },
    { text: 'Where to Buy', href: '/where-to-buy' },
    { text: 'Careers', href: '/careers' },
    { text: 'Contact', href: '/contact' },
  ],
  resources: [
    { text: 'Tips & Tricks', href: '/tips-and-tricks' },
    { text: 'FAQ', href: '/faq' },
    { text: 'News', href: '/news' },
    { text: 'Resources', href: '/resources' },
  ],
};

// Social media links
const socialLinks = [
  { name: 'Facebook', icon: 'tabler:brand-facebook', href: 'https://facebook.com/satispie' },
  { name: 'Instagram', icon: 'tabler:brand-instagram', href: 'https://instagram.com/satispie' },
  { name: 'Twitter', icon: 'tabler:brand-x', href: 'https://twitter.com/satispie' },
  { name: 'LinkedIn', icon: 'tabler:brand-linkedin', href: 'https://linkedin.com/company/satispie' },
];
---

<footer class="bg-gray-900 text-gray-300">
  <!-- Newsletter Section -->
  <div class="bg-blue-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <div class="text-center md:text-left">
          <h3 class="text-2xl font-bold text-white mb-2">Stay Connected</h3>
          <p class="text-blue-100">Subscribe to our newsletter for updates, tips, and exclusive offers!</p>
        </div>
        <form 
          class="flex flex-col sm:flex-row gap-3 w-full md:w-auto"
          action="https://formspree.io/f/YOUR_FORM_ID"
          method="POST"
          data-newsletter-form
        >
          <input
            type="email"
            name="email"
            placeholder="Enter your email"
            required
            class="px-4 py-3 rounded-lg text-gray-900 placeholder-gray-500 bg-white focus:outline-none focus:ring-2 focus:ring-white w-full sm:w-64"
          />
          <button
            type="submit"
            class="px-6 py-3 bg-white text-blue-600 font-semibold rounded-lg hover:bg-gray-100 transition-colors duration-200 whitespace-nowrap"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>
  </div>

  <!-- Main Footer Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="col-span-1">
        <a href={getHomePermalink()} class="inline-block mb-4">
          <img src="/satispie-logo.svg" alt="SatisPie" class="h-12 w-auto filter brightness-0 invert" />
        </a>
        <p class="text-sm mb-4">
          Premium pre-baked pies, waffles, and pancakes for retail and foodservice partners nationwide.
        </p>
        <div class="flex space-x-3">
          {socialLinks.map(({ name, icon, href }) => (
            <a
              href={href}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={name}
              class="text-gray-400 hover:text-white transition-colors duration-200"
            >
              <Icon name={icon} class="w-6 h-6" />
            </a>
          ))}
        </div>
      </div>

      <!-- Products Links -->
      <div>
        <h4 class="text-white font-semibold mb-4">Products</h4>
        <ul class="space-y-2">
          {footerLinks.products.map(({ text, href }) => (
            <li>
              <a
                href={href}
                class="text-sm hover:text-white transition-colors duration-200"
              >
                {text}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Links -->
      <div>
        <h4 class="text-white font-semibold mb-4">Company</h4>
        <ul class="space-y-2">
          {footerLinks.company.map(({ text, href }) => (
            <li>
              <a
                href={href}
                class="text-sm hover:text-white transition-colors duration-200"
              >
                {text}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources Links -->
      <div>
        <h4 class="text-white font-semibold mb-4">Resources</h4>
        <ul class="space-y-2">
          {footerLinks.resources.map(({ text, href }) => (
            <li>
              <a
                href={href}
                class="text-sm hover:text-white transition-colors duration-200"
              >
                {text}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Contact Info -->
    <div class="mt-8 pt-8 border-t border-gray-800">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
        <div class="flex items-center gap-2">
          <Icon name="tabler:map-pin" class="w-5 h-5 text-blue-400" />
          <span>123 Bakery Lane, Chicago, IL 60601</span>
        </div>
        <div class="flex items-center gap-2">
          <Icon name="tabler:phone" class="w-5 h-5 text-blue-400" />
          <a href="tel:+1-800-SATISPIE" class="hover:text-white transition-colors duration-200">
            1-800-SATISPIE
          </a>
        </div>
        <div class="flex items-center gap-2">
          <Icon name="tabler:mail" class="w-5 h-5 text-blue-400" />
          <a href="mailto:info@satispie.com" class="hover:text-white transition-colors duration-200">
            info@satispie.com
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="bg-gray-950">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex flex-col md:flex-row justify-between items-center gap-2 text-xs text-gray-400">
        <div>
          Â© {currentYear} SatisPie Manufacturing. All rights reserved.
        </div>
        <div class="flex gap-4">
          <a href="/privacy" class="hover:text-white transition-colors duration-200">
            Privacy Policy
          </a>
          <a href="/terms" class="hover:text-white transition-colors duration-200">
            Terms of Use
          </a>
          <a href="/sitemap-index.xml" class="hover:text-white transition-colors duration-200">
            Sitemap
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>

<script>
  // Newsletter form handling
  function initNewsletterForm() {
    const form = document.querySelector('[data-newsletter-form]') as HTMLFormElement;
    
    if (form) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(form);
        const email = formData.get('email');
        
        // For now, just log the submission (replace with actual Formspree integration)
        console.log('Newsletter signup:', email);
        
        // Show success message (you can customize this)
        const button = form.querySelector('button[type="submit"]') as HTMLButtonElement;
        const originalText = button.textContent;
        button.textContent = 'Subscribed!';
        button.disabled = true;
        
        // Reset after 3 seconds
        setTimeout(() => {
          button.textContent = originalText;
          button.disabled = false;
          form.reset();
        }, 3000);
        
        // TODO: Implement actual Formspree submission when endpoint is ready
        // const response = await fetch(form.action, {
        //   method: 'POST',
        //   body: formData,
        //   headers: {
        //     'Accept': 'application/json'
        //   }
        // });
      });
    }
  }

  // Initialize on DOM content loaded
  document.addEventListener('DOMContentLoaded', initNewsletterForm);
  // Re-initialize on Astro page navigation
  document.addEventListener('astro:after-swap', initNewsletterForm);
</script>

<style>
  /* Add smooth hover transitions */
  footer a {
    transition: color 0.2s ease-in-out;
  }

  /* Newsletter input focus styles */
  input[type="email"]:focus {
    box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.3);
  }

  /* Social icon hover effect */
  footer a:hover svg {
    transform: scale(1.1);
    transition: transform 0.2s ease-in-out;
  }
</style>